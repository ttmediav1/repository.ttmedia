					<label>Name</label>
			</control>
			

			
		
			<control type="progress" id="2">
				<description>progress hour</description>
				<posx>180</posx>
				<posy>50</posy>
				<width>250</width>
				<height>35</height>
			</control>
			
			<control type="list" id="3000">
				<description>List to hold 'buttons'</description>
				<posx>120</posx>
				<posy>80</posy>
				<width>550</width>
				<height>320</height>
				<onright>105</onright>
				<onleft>3001</onleft>  
				<pagecontrol>105</pagecontrol>
				<itemlayout width="400" height="40">                
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>40</height>
						<texture border="5">button-nofocus.png</texture>
					
					</control>
					<control type="label">
						
						<posx>5</posx>
						<posy>5</posy>
						<width>1280</width>
						<height>38</height>
						<font>fontContextMenu</font>
			
						<textcolor>white</textcolor>
						<aligny>center</aligny>		    
						<align>left</align>
						<info>ListItem.Label</info>
					</control>
			   </itemlayout>
	
			   <focusedlayout width="400" height="40">

					
					<control type="image">
						<visible>Control.HasFocus(3000)</visible>
						<posx>0</posx>
						<posy>0</posy>
						<width>250</width>
						<height>40</height>                                        
						<texture border="5" fallback="button-focus2.png">button-focus.png</texture>
					</control>
					<control type="label">
						
						<posx>5</posx>
						<posy>5</posy>
						<width>1280</width>
						<height>38</height>
						<font>fontContextMenu</font>
			
						<textcolor>white</textcolor>
						<aligny>center</aligny>		    
						<align>left</align>
						<info>ListItem.Label</info>
					</control>
					
				</focusedlayout>
			</control>  
			
			<control type="scrollbar" id="105">
                <left>450</left>
                <top>80</top>
                <width>30</width>
                <height>350</height>
                
                <visible>true</visible>
                <texturesliderbackground>Button/scrollbar-V-background.png</texturesliderbackground>
                <texturesliderbar>Button/scrollbar-V.png</texturesliderbar>
                <texturesliderbarfocus colordiffuse="FF12B2E7">Button/scrollbar-V-focus.png</texturesliderbarfocus>
                <orientation>vertical</orientation>
                <showonepage>true</showonepage>
                <onup>3000</onup>
				
                <ondown>3000</ondown>
                <onleft>3000</onleft>
                <onright>3001</onright>
            </control>
			<control type="button" id="3001">
				<description>Close Window button</description>
				<posx>420</posx>
				<posy>5</posy>
				<width>80</width>
				<height>50</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<visible>system.getbool(input.enablemouse)</visible>			
				
			</control>	
	    </control>
    </controls>
</window>