			</control>
			
			<control type="image">
				<description>wizard image</description>
				<posx>10</posx>
				<posy>10</posy>
				<width>180</width>
				<height>180</height>
				
				<texture border="20">wizard.gif</texture>       
			</control>
			<control type="label" id="1">
